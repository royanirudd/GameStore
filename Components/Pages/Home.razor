@page "/"
@inject GamesClient Client
@inject NavigationManager NavigationManager



<PageTitle>Game Catalogue</PageTitle>

<div class="mt-2">
<a class="btn btn-primary" role="button" href="/editgame" >New Game</a>
</div>

@if (games is null)
{
	<p><em>Loading...</em></p>
} 
else
{
	<table class="table table-striped table-bordered table-hover mt-3">
		<thead class="table-dark">
			<th>Id</th>
			<th>Name</th>
			<th>Genre</th>
			<th class="text-end">Price</th>
			<th>Release Date</th>
			<th>Actions</th>
		</thead>
		<tbody>
			@foreach ( var game in games ){
			<tr>
				<td>@game.Id</td>
				<td>@game.Name</td>
				<td>@game.Genre</td>
				<td class="text-end">$ @game.Price.ToString()</td>
				<td>@game.ReleaseDate</td>
				<td>
					<a class="btn btn-warning" role="button" href="/editgame/@game.Id">Edit</a>
					<button class="btn btn-danger" @onclick="() => DeleteGame(game)">Delete</button>
				</td>

			</tr>
			}	
		</tbody>
	</table>
}

@code {
	

	private GameSummary[]?  games;

	protected override void OnInitialized()
	{
		games = Client.GetGames();
	}

	    private void DeleteGame(GameSummary game)
	    {
		Client.DeleteGameById(game.Id);
		games = Client.GetGames(); //Refresh the games list after deletion
		Console.WriteLine($"Deleted game with ID: {game.Id}"); // For debugging
		NavigationManager.Refresh();
	    }
}
